{% extends 'moderateur/dashboard.html.twig' %}

{% block title %}Créer une Discussion Temporaire{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Créer une Discussion Temporaire</h1>

    <!-- Bouton Retour -->
    <div class="mb-4">
        <a href="{{ path('moderator_temp_discussions') }}" class="btn btn-secondary">← Retour à la Gestion des Discussions Temporaires</a>
    </div>

    <!-- Formulaire pour créer une discussion temporaire -->
    {{ form_start(form) }}
        <div class="form-group mb-3">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-success">Créer</button>
    {{ form_end(form) }}
</div>
{% endblock %}
