{% extends 'base.html.twig' %} 

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-sm" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">Veuillez vous connecter</h2>

        {{ form_start(loginForm) }}

        <div class="form-group mb-3">
            {{ form_label(loginForm.email, 'Email') }}
            {{ form_widget(loginForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
            {{ form_errors(loginForm.email) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(loginForm.password, 'Mot de passe') }}
            {{ form_widget(loginForm.password, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe'}}) }}
            {{ form_errors(loginForm.password) }}
        </div>

        <div class="form-group form-check mb-3">
            {{ form_widget(loginForm.rememberMe, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(loginForm.rememberMe, 'Se souvenir de moi', {'label_attr': {'class': 'form-check-label'}}) }}
        </div>

        <button type="submit" class="btn btn-primary btn-block w-100">Connexion</button>

        {{ form_end(loginForm) }}
    </div>
</div>
{% endblock %}