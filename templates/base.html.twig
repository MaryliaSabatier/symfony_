{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="d-flex justify-content-center align-items-center vh-100" style="background: linear-gradient(to bottom, #007bff, #6610f2);">
    <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px; border-radius: 15px;">
        <h2 class="text-center mb-4 text-primary">Bienvenue !</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="form-group mb-3 position-relative">
                <label for="username" class="form-label text-secondary">Email</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                    <input type="email" name="_username" id="username" class="form-control" placeholder="Votre email"
                           value="{{ last_username }}" required>
                </div>
            </div>

            <div class="form-group mb-3 position-relative">
                <label for="password" class="form-label text-secondary">Mot de passe</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                    <input type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe" required>
                </div>
            </div>

            <div class="form-group mb-3 form-check">
                <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                <label for="remember_me" class="form-check-label text-secondary">Se souvenir de moi</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary btn-block w-100 shadow-sm">Connexion</button>
        </form>

        <p class="text-center text-secondary mt-4">
            Vous n'avez pas de compte ? 
            <a href="{{ path('app_register') }}" class="text-primary">Inscrivez-vous</a>
        </p>
    </div>
</div>
{% endblock %}
