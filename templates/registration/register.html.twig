{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px; border-radius: 10px;">
        <h1 class="text-center mb-4">Créer un compte</h1>

        {{ form_start(registrationForm) }}

        <div class="mb-3">
            {{ form_label(registrationForm.email, 'Email') }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.nomUtilisateur, 'Nom d\'utilisateur') }}
            {{ form_widget(registrationForm.nomUtilisateur, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom d\'utilisateur'}}) }}
            {{ form_errors(registrationForm.nomUtilisateur) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="mb-3 form-check">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {'label_attr': {'class': 'form-check-label'}}) }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="btn btn-primary w-100">Créer un compte</button>

        {{ form_end(registrationForm) }}

        <p class="text-center mt-3">
            Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-primary">Connectez-vous</a>
        </p>
    </div>
</div>
{% endblock %}
