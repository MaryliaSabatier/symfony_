{% block title %}Connexion{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow-sm" style="width: 100%; max-width: 400px;">
        <h2 class="text-center mb-4">Veuillez vous connecter</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Email</label>
                <input type="email" name="_username" id="username" class="form-control" placeholder="Votre email"
                       value="{{ last_username }}" required>
            </div>

            <div class="form-group mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" placeholder="Votre mot de passe" required>
            </div>

            <div class="form-group mb-3 form-check">
                <input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
                <label for="remember_me" class="form-check-label">Se souvenir de moi</label>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary btn-block w-100">Connexion</button>
        </form>
    </div>
</div>
{% endblock %}
